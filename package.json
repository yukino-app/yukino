{
    "name": "yukino-app",
    "private": true,
    "productName": "Yukino",
    "appId": "io.github.zyrouge.yukino",
    "version": "0.0.30-beta.0",
    "description": "Yukino lets you read manga or stream anime ad-free from multiple sources.",
    "author": {
        "name": "ZYROUGE",
        "email": "zyrouge@hotmail.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/zyrouge/yukino-app"
    },
    "homepage": "https://zyrouge.github.io/yukino-app",
    "scripts": {
        "vite:dev": "vite",
        "vite:serve": "vite preview",
        "vite:build": "rimraf ./dist/vite && vue-tsc --noEmit && vite build",
        "vite:typecheck": "vue-tsc --noEmit",
        "electron:icons": "node scripts/electron-icons",
        "electron:start": "yarn electron:lint && cross-env YUKINO_PLATFORM=\"electron\" electron environments/electron/main.js",
        "electron:dev": "yarn electron:lint && cross-env YUKINO_PLATFORM=\"electron\" node scripts/electron-dev",
        "electron:pack": "yarn electron:lint && cross-env DEBUG=\"electron-builder\" yarn electron:build --dir",
        "electron:build": "yarn electron:lint && rimraf ./dist/electron && yarn electron:icons && cross-env YUKINO_PLATFORM=\"electron\" yarn vite:build && electron-builder --config=environments/electron/builder.config.js",
        "electron:publish": "yarn electron:lint && yarn electron:build --publish=always",
        "electron:lint": "eslint environments/electron",
        "capacitor:sync": "cap sync",
        "capacitor:android:icons": "cordova-res android --skip-config --copy --android-project environments/capacitor/android",
        "capacitor:android:dev": "cross-env NODE_ENV=\"development\" YUKINO_PLATFORM=\"capacitor\" YUKINO_OS=\"android\" node scripts/capacitor-dev",
        "capacitor:android:build": "cross-env YUKINO_PLATFORM=\"capacitor\" YUKINO_OS=\"android\" yarn vite:build && yarn capacitor:android:icons && yarn capacitor:sync",
        "capacitor:android:open": "cap open android",
        "capacitor:android:run": "cap run android",
        "capacitor:android:pack": "yarn capacitor:android:build && node scripts/capacitor-android-debug",
        "capacitor:android:release": "yarn capacitor:android:build && node scripts/capacitor-android-release"
    },
    "dependencies": {
        "@capacitor-community/http": "^1.0.0",
        "@capacitor/android": "^3.1.1",
        "@capacitor/app": "^1.0.0",
        "@capacitor/browser": "^1.0.2",
        "@capacitor/core": "^3.1.1",
        "@capacitor/dialog": "^1.0.0",
        "@capacitor/filesystem": "^1.0.1",
        "@capacitor/splash-screen": "^1.0.2",
        "@capacitor/status-bar": "^1.0.2",
        "@fortawesome/fontawesome-svg-core": "^1.2.35",
        "@fortawesome/free-brands-svg-icons": "^5.15.3",
        "@fortawesome/free-regular-svg-icons": "^5.15.3",
        "@fortawesome/free-solid-svg-icons": "^5.15.3",
        "@fortawesome/vue-fontawesome": "^3.0.0-3",
        "anime-ext": "1.1.21",
        "capacitor-secure-storage-plugin": "^0.6.2",
        "discord-rpc": "^4.0.1",
        "electron-store": "^8.0.0",
        "electron-updater": "^4.3.9",
        "got": "^11.8.2",
        "lodash.merge": "^4.6.2",
        "qs": "^6.10.1",
        "swiper": "^6.7.5",
        "vue": "^3.1.4",
        "vue-router": "4"
    },
    "devDependencies": {
        "@capacitor/cli": "^3.1.1",
        "@tailwindcss/forms": "^0.3.3",
        "@types/lodash.merge": "^4.6.6",
        "@types/qs": "^6.9.7",
        "@vitejs/plugin-vue": "^1.2.5",
        "@vue/compiler-sfc": "^3.1.4",
        "@zyrouge/git-compare": "^1.0.0",
        "autoprefixer": "^10.3.1",
        "cordova-res": "^0.15.3",
        "cross-env": "^7.0.3",
        "cross-spawn": "^7.0.3",
        "electron": "^13.1.6",
        "electron-builder": "^22.10.5",
        "electron-icon-builder": "^2.0.1",
        "eslint": "^7.30.0",
        "postcss": "^8.3.5",
        "rimraf": "^3.0.2",
        "tailwindcss": "^2.2.4",
        "typescript": "^4.3.5",
        "vite": "2.4.2",
        "vue-tsc": "^0.2.0"
    }
}
